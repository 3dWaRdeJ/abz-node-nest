{% extends "../layout/auth.twig" %}

{% block content %}
    <body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <b>Log</b>in
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form id="loginForm">
                <div class="input-group mb-3">
                    <input id="inputEmail" type="email" class="form-control" placeholder="Email" name="email" required autocomplete="email" maxlength="255" autofocus>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input id="inputPassword" type="password" class="form-control"  placeholder="Password" name="password" required autocomplete="current-password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <p class="mb-0">
                            <a href="/register" class="text-center">Register a new membership</a>
                        </p>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->

{% endblock %}

{% block js %}
<script type="text/javascript">
  const loginForm = $('#loginForm');
  const email = $('#inputEmail');
  const password = $('#inputPassword');

  const validator = loginForm.validate({
    rules: {
      email: {
        required: true,
        maxlength: 255,
        email: true,
      },
      password: {
        required: false,
      }
    },
    messages: {
      email: {
        required: "Please enter a email address",
        email: "Please enter a valid email address"
      },
      password: {
        required: "Please provide a password",
      }
    },
    errorElement: 'span',
    errorPlacement: function (error, element) {
      error.addClass('invalid-feedback');
      element.closest('.input-group').append(error);
    },
    highlight: function (element, errorClass, validClass) {
      $(element).addClass('is-invalid');
    },
    unhighlight: function (element, errorClass, validClass) {
      $(element).removeClass('is-invalid');
    },
    submitHandler: function(form) {
      // do other things for a valid form
      $.ajax({
        url: '/api/v1/login',
        contentType: 'application/json',
        type: 'POST',
        data: JSON.stringify({
          email: email.val(),
          password: password.val()
        }),
        headers: {
          // 'csrf-token': $('meta[name="CSRF-Token"]').attr('content')
        },
        success: (response, status, xhr) => {
          window.location.href = '/';
        },
        error: (response) => {
          let res = response.responseJSON;
          switch (response.status) {
            case 404:
              validator.showErrors({email: res.message[0]})
              password.val('');
              break;
            case 401:
              validator.showErrors({email: res.message[0], password: res.message[0]});
          }
        }
      })
    }
  });
</script>
{% endblock %}